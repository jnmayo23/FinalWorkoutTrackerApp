<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".WorkoutDetailsFragment">

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        tools:text="mm-dd-yy"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item_date"
        android:layout_margin="10dp"
        android:gravity="right"
        tools:text="Workout Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_date"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        tools:text="Workout Type"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item_type"
        android:layout_margin="10dp"
        android:gravity="right"
        tools:text="time"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_type"
        android:layout_margin="10dp"
        tools:text="description"
        android:textSize="20sp" />

</RelativeLayout>
